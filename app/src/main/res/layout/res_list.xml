<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/img_res"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:padding="5dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="1dp">

        <TextView
            android:id="@+id/text_res_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp" />

        <RatingBar
            android:id="@+id/res_rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="4"

            android:stepSize="1" />

        <TextView
            android:id="@+id/text_res_cuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="bottom">

            <Button
                android:id="@+id/res_time1"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:background="@drawable/restime"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scaleType="fitXY"
                android:stateListAnimator="@null"
                android:text="09:15"
                android:textColor="@color/colorWhite"
                android:textSize="12dp" />

            <Button
                android:id="@+id/res_time2"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/restime"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingRight="5dp"
                android:paddingStart="5dp"
                android:scaleType="fitXY"
                android:stateListAnimator="@null"
                android:text="09:15"
                android:textColor="@color/colorWhite"
                android:textSize="12dp" />

            <Button
                android:id="@+id/res_time3"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/restime"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scaleType="fitXY"
                android:stateListAnimator="@null"
                android:text="09:15"
                android:textColor="@color/colorWhite"
                android:textSize="12dp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:paddingRight="5dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal|top"
    android:layout_gravity="center_horizontal|right|top">
        <TextView
            android:id="@+id/text_dollar_range"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="$$$"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/btn_wait_time"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/wait_green"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:scaleType="fitXY"
            android:stateListAnimator="@null"
            android:text="26"
            android:textSize="13dp" />
</LinearLayout>

        <TextView
            android:id="@+id/textview_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.0 mi, 4 mins"
            android:textSize="12dp" />

    </LinearLayout>

</LinearLayout>